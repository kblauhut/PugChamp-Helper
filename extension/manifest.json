{
  "manifest_version":2,
  "name":"PugChamp Helper",
  "description":"PugChamp ETF2L division and username integration.",
  "version":"1.0",
  "permissions":[
    "declarativeContent",
    "storage",
    "http://api.etf2l.org/*",
    "https://api.etf2l.org/*"
  ],
  "background":{
    "scripts":[
      "background.js"
    ],
    "persistent":false
  },
  "content_scripts":[
    {
      "matches":[
        "https://eu.pug.champ.gg/*",
        "http://eu.pug.champ.gg/*"
      ],
      "js":[
        "src/contentscripts/eu/main.js"
      ],
      "run_at":"document_end"
    }
  ],
  "page_action":{
    "default_popup":"popup.html",
    "default_icon":{

    }
  },
  "icons":{

  }
}
