{
  "manifest_version":2,
  "name":"PugChamp Helper",
  "description":"Beta version! PugChamp ETF2L division and username integration.",
  "version":"0.94",
  "permissions":[
    "declarativeContent",
    "storage",
    "http://api.etf2l.org/*",
    "https://api.etf2l.org/*",
    "https://raw.githubusercontent.com/*"
  ],
  "web_accessible_resources": [
    "res/css/divTag.css"
  ],
  "background":{
    "scripts":[
      "background.js",
      "bgrequests.js"
    ],
    "persistent":false
  },
  "content_scripts":[
    {
      "matches":[
        "https://*.pug.champ.gg/",
        "http://*.pug.champ.gg/"
      ],
      "js":[
        "src/contentscripts/main.js"
      ],
      "run_at":"document_end"
    },
    {
      "matches":[
        "https://*.pug.champ.gg/player/*",
        "http://*.pug.champ.gg/player/*"
      ],
      "js":[
        "src/contentscripts/profile.js"
      ],
      "run_at":"document_end"
    }
  ],
  "browser_action":{
    "default_popup":"src/popup/popup.html",
    "default_icon":{

    }
  },
  "icons":{

  }
}
